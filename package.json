{
  "name": "retry-until-online",
  "description": "Delay the execution of a function until the browser is back online",
  "keywords": [
    "offline first"
  ],
  "version": "1.0.0",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/maoberlehner/retry-until-online",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/retry-until-online"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/retry-until-online/issues"
  },
  "devDependencies": {
    "@avalanche/eslint-config": "^0.1.0",
    "chai": "^4.0.2",
    "eslint": "^3.19.0",
    "eslint-plugin-compat": "^1.0.3",
    "eslint-plugin-import": "^2.3.0",
    "mocha": "^3.4.2",
    "pre-git": "^3.15.0",
    "rollup": "^0.42.0",
    "rollup-plugin-buble": "^0.15.0",
    "uglify-js": "^3.0.15"
  },
  "main": "dist/index.js",
  "module": "js/index.js",
  "scripts": {
    "bundle": "rollup --config --format umd --name retryUntilOnline --output dist/index.js js/index.js",
    "minify": "uglifyjs --compress --output dist/index.min.js dist/index.js",
    "lint:no-error": "eslint js/* test/* || exit 0",
    "lint": "eslint js/* test/*",
    "build": "npm run bundle && npm run minify && npm run lint:no-error",
    "test": "mocha"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  },
  "browserslist": [
    "> 1%"
  ]
}
