{
  "name": "retry-until-online",
  "description": "Delay the execution of a function until the browser is back online",
  "keywords": [
    "offline first"
  ],
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/maoberlehner/retry-until-online",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/retry-until-online"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/retry-until-online/issues"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.6.1",
    "eslint-config-modularis": "^2.0.0",
    "eslint-plugin-import": "^2.0.0",
    "mocha": "^3.1.0",
    "pre-git": "^3.10.0",
    "rollup": "^0.36.1",
    "rollup-plugin-buble": "^0.14.0",
    "uglify-js": "^2.7.3"
  },
  "optionalDependencies": {
    "esdoc": "^0.4.8"
  },
  "main": "dist/index.js",
  "jsnext:main": "js/index.js",
  "scripts": {
    "scripts:bundle": "rollup --config --format cjs --output dist/index.js js/index.js",
    "scripts:minify": "uglifyjs --compress --output dist/index.min.js dist/index.js",
    "scripts:lint": "eslint js/* test/*",
    "scripts:lint-no-error": "eslint js/* test/* || exit 0",
    "scripts:doc": "esdoc -c .esdocrc",
    "scripts": "npm run scripts:bundle && npm run scripts:minify && npm run scripts:lint-no-error",
    "test": "mocha --timeout 5000"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run scripts:lint"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  }
}
